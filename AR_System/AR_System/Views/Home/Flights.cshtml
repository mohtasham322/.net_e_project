<!-- Flight Search Areas -->
<section id="explore_area" class="section_padding">
    <div class="container">
        <!-- Section Heading -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="section_heading_center">
                    <h2>Choose flight for you</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="flight_search_result_wrapper">
                            @foreach (var flight_schedules in ViewBag.flights)
                            {
                                <div class="flight_search_item_wrappper">
                                    <div class="flight_search_items">
                                        <div class="multi_city_flight_lists">
                                            <div class="flight_multis_area_wrapper">
                                                <div class="flight_search_left">
                                                    <div class="flight_logo">
                                                        <img src="~/assets/img/common/biman_bangla.png" alt="img">
                                                    </div>
                                                    <div class="flight_search_destination">
                                                        <p>From</p>
                                                        <h3>@flight_schedules.FromCity.CityName</h3>
                                                        <h6>@flight_schedules.FromCity.PortName</h6><br />
                                                        <span>@flight_schedules.DepartureTime</span>
                                                    </div>
                                                </div>
                                                <div class="flight_search_middel">
                                                    <div class="flight_right_arrow">
                                                        <img src="~/assets/img/icon/right_arrow.png" alt="icon">

                                                        @if (flight_schedules.Stops == 0)
                                                        {
                                                            <h6>Non-Stop</h6>
                                                        }
                                                        else
                                                        {
                                                            <h6>Stops: @flight_schedules.Stops</h6>
                                                        }
                                                        @{
                                                            TimeSpan duration = flight_schedules.ArrivalTime - flight_schedules.DepartureTime;
                                                            int totalHours = (int)duration.TotalHours;
                                                            int totalMinutes = duration.Minutes;
                                                            string formattedDuration = $"{totalHours} hours {totalMinutes} minutes";
                                                        }

                                                        <p>@formattedDuration</p>
                                                    </div>
                                                    <div class="flight_search_destination">
                                                        <p>To</p>
                                                        <h3>@flight_schedules.ToCity.CityName</h3>
                                                        <h6>@flight_schedules.ToCity.PortName</h6><br />
                                                        <span>@flight_schedules.ArrivalTime</span>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="flight_search_right">
                                            @foreach (var ticketClass in ViewBag.ticketClass)
                                            {
                                                    <h2>$ @ticketClass.EconomyPrice</h2>
                                            }
                                            <a asp-controller="Booking" asp-action="Book_Flight" asp-route-id="@flight_schedules.Id" class="btn btn_theme btn_sm">
                                                Book
                                                now
                                            </a>
                                            <p>price vary on ticket class</p>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Flight Search Item -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

