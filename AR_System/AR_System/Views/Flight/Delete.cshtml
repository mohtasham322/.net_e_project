<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Flights</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">
        <div class="col-12">
            <div class="card top-selling overflow-auto">

                <div class="card-body pb-4">
                    <h5 class="card-title">Add Location</h5>
                    @model AR_System.Models.Flight
                    <!-- Vertical Form -->
                    <form method="post" asp-action="ConfirmDelete" class="row g-3">
                        <div class="col-12">
                            <input asp-for="Id" hidden />
                            <label asp-for="Name" class="form-label">Flight Name</label>
                            <input asp-for="Name" class="form-control" disabled>
                        </div>
                        <div class="col-12">
                            <label asp-for="FlightNumber" class="form-label">Flight Number</label>
                            <input class="form-control" asp-for="FlightNumber" disabled>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                        </div>

                    </form><!-- Vertical Form -->


                </div>
